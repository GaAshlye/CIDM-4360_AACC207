@model uBid.Models.UserModel

@{
    ViewData["Title"] = "Create Item";
}

<div class="container-fluid">
	<div class="row">
		<div class="col-md-12">
			<nav class="navbar navbar-expand-lg navbar-light bg-light">			 
				
			</nav>
		</div>
	</div>
	<div class="row">
		<div class="col-md-6">
			<form asp-action="Create">
				<div class="form-group">
                    <!-- <label for="Category">
						Category
					</label>
                    <select>
                    <option value="1">Clothing</option>
                    <option value="2">Automobile</option>
                    <option value="3">Properties</option>
                    <option value="4">Electronics</option>
                    </select> -->
					 
					
				</div>
				<div class="form-group">
                    <label for="textinput">
						User Name:
					</label>
					<input asp-for="userName" class="form-control" type="text" placeholder="user name" />
					 
					<label for="password">
						Pass Word:
					</label>
					<input type="password" class="form-control" asp-for="passWord" />
				</div>		
                <div class="form-group">
					 
					<label for="email">
						Email
					</label>
					<input type="email" class="form-control" asp-for="emails" />
				</div>	
                <div class="form-group">
					 
					<label for="textinput">
						Address
					</label>
					<input type="text" class="form-control" asp-for="address" />
				</div>	
                <div class="form-group">
					 
					<label for="text">
						Zip Code: 
					</label>
					<input type="text" class="form-control" asp-for="zip"  />
				</div>
				 <div class="form-group">
					 
					<label for="textinput">
						Billing Address
					</label>
					<input type="text" class="form-control" asp-for="billAddress" />
				</div>	
                <div class="form-group">
					 
					<label for="text">
						Zip Code: 
					</label>
					<input type="text" class="form-control" asp-for="billZip"  />
				</div>
				<div class="form-group">
					 
					<label for="text">
						Credit Card: 
					</label>
					<input type="number" class="form-control" asp-for="creditCard"  />
				</div>
				
				
				<button type="submit" class="btn btn-primary" value="Create">
					Submit
				</button>
			</form>
		</div>	
	</div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
