@model UserModel

<div class="container-fluid">
<form class="form-horizontal" asp-action="DoAddUser" method="POST">
    <fieldset>
    <!-- Form Name -->
    <legend>Add User</legend>

    <!-- Text input-->
    <div class="form-group">
        <label class="col-md-4 control-label" for="textinput">Username (email)</label>  
        <div class="col-md-4">
        <input asp-for="userName" type="text" placeholder="Username (email)" class="form-control input-md" required="">
        <span class="help-block">Please use a valid email address as your username</span>  
        </div>
    </div>

    <!-- Password input-->
    <div class="form-group">
        <label class="col-md-4 control-label" for="passwordinput">Password</label>
        <div class="col-md-4">
        <input asp-for="passWord" type="password" placeholder="Password" class="form-control input-md" required="">
        <span class="help-block">Please ensure that your password is 8 characters long and contains both upper- and lower-case letters</span>
        </div>
    </div>

    <!-- Button -->
    <div class="form-group">
        <label class="col-md-4 control-label" for="singlebutton"></label>
        <div class="col-md-4">
        <button id="singlebutton" name="singlebutton" type="submit" class="btn btn-default">Create</button>
        </div>
    </div>
    </fieldset>
</form>  
</div>